<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/logo1"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:weightSum="1"
            android:layout_above="@+id/linearLayout10"
            android:layout_below="@+id/linearLayout5"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/bawel">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout5"
                android:layout_centerHorizontal="true"
                android:id="@+id/linearLayout6"
                android:weightSum="1"
                android:background="#4d94f1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="User Name"
                    android:id="@+id/textView24"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/username"
                    android:hint="\@username"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:textColor="#4d94ff"
                    android:textStyle="bold"
                    android:background="#fff"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout6"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/linearLayout7"
                android:background="#4d94ff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Password"
                    android:id="@+id/textView25"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:layout_width="328dp"
                    android:layout_height="30dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/password"
                    android:hint="\@password"
                    android:layout_marginBottom="20dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#4d94ff"
                    android:background="#fff"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4d79ff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout10">

            <Button
                android:layout_width="186dp"
                android:layout_height="60dp"
                android:text="LOGIN"
                android:id="@+id/button_login"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:textStyle="bold"
                android:textColor="#fff" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="BACK"
                android:id="@+id/button_login_exit"
                android:layout_gravity="bottom"
                android:background="#00000000"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
