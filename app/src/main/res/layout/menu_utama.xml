<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="#FFFFFF">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo1"
        android:background="#00000000"
        android:layout_marginTop="-15dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-1dp"
        android:id="@+id/Isi1"
        android:layout_marginBottom="-15dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="169dp"
            android:weightSum="1"
            android:id="@+id/Hitung1"
            android:layout_gravity="right"
            android:background="#4d79ff"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:showDividers="end">

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="119dp"
                android:id="@+id/imageButton_prosess"
                android:src="@drawable/hitung2"
                android:background="#00000000" />

            <TextView
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:text="Perhitungan Kinerja Karyawan"
                android:id="@+id/textView2"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="14dp"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="169dp"
            android:weightSum="1"
            android:id="@+id/Add"
            android:background="#4d79ff"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:showDividers="end">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:id="@+id/imageButton_add"
                android:src="@drawable/add"
                android:background="#00000000" />

            <TextView
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:text="Tambah Karyawan"
                android:id="@+id/textView"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="14dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Isi1"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="-20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/linearLayout4"
            android:layout_gravity="right"
            android:background="#4d79ff"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:showDividers="end">

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="119dp"
                android:id="@+id/imageButton_hasil"
                android:src="@drawable/cup"
                android:background="#00000000" />

            <TextView
                android:layout_width="133dp"
                android:layout_height="51dp"
                android:text="Hasil Perhitungan Kinerja Karyawan"
                android:id="@+id/textView5"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="14dp"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="169dp"
            android:weightSum="1"
            android:id="@+id/linearLayout8"
            android:background="#4d79ff"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            android:showDividers="end">

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="119dp"
                android:id="@+id/imageButton_data"
                android:src="@drawable/karyawan"
                android:background="#00000000" />

            <TextView
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:text="Data Karyawan"
                android:id="@+id/textView6"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="14dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="EXIT"
        android:id="@+id/btn_exitMenu"
        android:background="#00000000"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#4d79ff"
        android:textColorHint="#FF0" />

</LinearLayout>
