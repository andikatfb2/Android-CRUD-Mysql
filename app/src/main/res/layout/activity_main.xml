<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main"
    android:background="#00b8e6"
    android:id="@+id/jjjkk">

    <Button
        android:layout_width="185dp"
        android:layout_height="80dp"
        android:text="SAVE"
        android:id="@+id/button_simpan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/button_BATALSIMPAN"
        android:layout_alignTop="@+id/button_simpan"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_simpan"
        android:textColor="#000"
        android:background="#fff"
        android:textStyle="bold"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TAMBAH KARYAWAN"
        android:id="@+id/textView9"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_simpan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9"
        android:id="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:id="@+id/textView19"
            android:textColor="#fff"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_nama"
            android:textColor="#fff"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Nama Lengkap"
            android:layout_below="@+id/textView9"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:id="@+id/textView20"
            android:textStyle="bold"
            android:textColor="#fff" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:id="@+id/spinner"
            android:entries="@array/gender_arrays"
            android:prompt="@string/spinner"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendidikan Terakhir"
            android:id="@+id/textView21"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:id="@+id/spinner_pendidikan"
            android:spinnerMode="dropdown"
            android:entries="@array/pendidikan_arrays"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jabatan"
            android:id="@+id/textView22"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/spinner_jabatan"
            android:spinnerMode="dropdown"
            android:entries="@array/jabatan_arrays" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:id="@+id/textView23"
            android:textColor="#fff"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_alamat"
            android:textColor="#fff"
            android:hint="Alamat Lengkap"
            android:lines="1"
            android:longClickable="false"
            android:layout_below="@+id/editText_jabatan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editText_jabatan"
            android:layout_alignEnd="@+id/editText_jabatan"
            android:layout_marginBottom="8dp" />

    </LinearLayout>


</RelativeLayout>
